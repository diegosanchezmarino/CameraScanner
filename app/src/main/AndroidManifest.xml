<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.blueit.camerascanner">

    <uses-feature android:name="android.hardware.camera.any" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name="com.blueit.camerascannerlibrary.App"
        android:allowBackup="true"
        android:icon="@mipmap/scanner_lib_ic_launcher"
        android:label="@string/scanner_lib_app_name"
        android:roundIcon="@mipmap/scanner_lib_ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/scanner_lib_Theme.camerascanner">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.blueit.camerascannerlibrary.CameraScannerActivity"
            android:theme="@style/scanner_lib_Camera">
        </activity>


    </application>

</manifest>